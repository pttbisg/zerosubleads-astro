---
import { Icon } from 'astro-icon/components';

const personas = [
  { icon: "lucide:zap", title: "Solo Founders", desc: "Doing your own outbound" },
  { icon: "lucide:briefcase", title: "Freelance SDRs", desc: "Consultants & contractors" },
  { icon: "lucide:users", title: "Early Startups", desc: "Lean sales teams" },
  { icon: "lucide:monitor", title: "Agencies", desc: "Running client campaigns" },
];
---

<section class="bg-gray-50 py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center mb-12">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900">
        Built for people who don't need another subscription
      </h2>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {personas.map((p) => (
        <div class="flex flex-col items-center text-center p-6 bg-white rounded-xl shadow-sm border border-gray-100 hover:border-primary-200 transition-colors">
          <Icon name={p.icon} class="h-8 w-8 text-gray-700 mb-4" />
          <h3 class="font-semibold text-gray-900">{p.title}</h3>
          <p class="text-sm text-gray-500">{p.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
