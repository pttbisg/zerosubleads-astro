---
import { Icon } from 'astro-icon/components';
---

<section class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900">
        How we stack up
      </h2>
    </div>

    <div class="overflow-hidden rounded-2xl border border-gray-200 shadow-sm">
      <div class="overflow-x-auto">
        <table class="w-full min-w-[800px] border-collapse bg-white text-left text-sm text-gray-600">
          <thead>
            <tr class="bg-gray-50/50">
              <th scope="col" class="p-6 font-medium text-gray-900 w-1/5">Feature</th>
              <th scope="col" class="p-6 font-bold text-primary-600 w-1/5 bg-primary-50/30 border-t-4 border-t-primary-600">ZeroSubLeads</th>
              <th scope="col" class="p-6 font-medium text-gray-900 w-1/5">Sales Navigator</th>
              <th scope="col" class="p-6 font-medium text-gray-900 w-1/5">Most Leads Platforms</th>
              <th scope="col" class="p-6 font-medium text-gray-900 w-1/5">LinkedIn Leads Platforms</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100 border-t border-gray-100">
            <tr>
              <td class="p-6 font-medium text-gray-900">LinkedIn Profile Data</td>
              <td class="p-6 bg-primary-50/30"><Icon name="lucide:check" class="h-5 w-5 text-green-600" /></td>
              <td class="p-6"><Icon name="lucide:check" class="h-5 w-5 text-green-600" /></td>
              <td class="p-6"><Icon name="lucide:minus" class="h-5 w-5 text-gray-300" /></td>
              <td class="p-6"><Icon name="lucide:check" class="h-5 w-5 text-green-600" /></td>
            </tr>
            <tr>
              <td class="p-6 font-medium text-gray-900">Verified Emails</td>
              <td class="p-6 bg-primary-50/30"><Icon name="lucide:check" class="h-5 w-5 text-green-600" /></td>
              <td class="p-6"><Icon name="lucide:x" class="h-5 w-5 text-red-400" /></td>
              <td class="p-6"><Icon name="lucide:check" class="h-5 w-5 text-green-600" /></td>
              <td class="p-6"><Icon name="lucide:x" class="h-5 w-5 text-red-400" /></td>
            </tr>
            <tr>
              <td class="p-6 font-medium text-gray-900">Natural Language Search</td>
              <td class="p-6 bg-primary-50/30"><Icon name="lucide:check" class="h-5 w-5 text-green-600" /></td>
              <td class="p-6"><Icon name="lucide:x" class="h-5 w-5 text-red-400" /></td>
              <td class="p-6"><Icon name="lucide:x" class="h-5 w-5 text-red-400" /></td>
              <td class="p-6"><Icon name="lucide:x" class="h-5 w-5 text-red-400" /></td>
            </tr>
            <tr>
              <td class="p-6 font-medium text-gray-900">Pay-per-lead Pricing</td>
              <td class="p-6 bg-primary-50/30"><Icon name="lucide:check" class="h-5 w-5 text-green-600" /></td>
              <td class="p-6"><Icon name="lucide:x" class="h-5 w-5 text-red-400" /></td>
              <td class="p-6"><Icon name="lucide:x" class="h-5 w-5 text-red-400" /></td>
              <td class="p-6"><Icon name="lucide:x" class="h-5 w-5 text-red-400" /></td>
            </tr>
            <tr>
              <td class="p-6 font-medium text-gray-900">No Account Ban Risk</td>
              <td class="p-6 bg-primary-50/30"><Icon name="lucide:check" class="h-5 w-5 text-green-600" /></td>
              <td class="p-6"><Icon name="lucide:check" class="h-5 w-5 text-green-600" /></td>
              <td class="p-6"><Icon name="lucide:minus" class="h-5 w-5 text-gray-300" /></td>
              <td class="p-6"><Icon name="lucide:x" class="h-5 w-5 text-red-400" /></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
