---
import Button from './Button.astro';
---

<section id="pricing" class="bg-gray-50 py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        Simple pricing. No surprises.
      </h2>
      <p class="mt-6 text-lg text-gray-600">
        Credits never expire. Use them when you need them.
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-3 lg:gap-8">
      <!-- Starter -->
      <div class="rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-900/5 hover:ring-primary-500 hover:shadow-lg transition-all">
        <h3 class="text-lg font-semibold leading-8 text-gray-900">Starter Pack</h3>
        <p class="mt-4 text-sm leading-6 text-gray-600">Best for testing out the platform.</p>
        <div class="mt-6 flex items-baseline gap-x-1">
          <span class="text-4xl font-bold tracking-tight text-gray-900">$15</span>
        </div>
        <div class="mt-2 text-sm text-gray-500">100 Credits ($0.15 / lead)</div>
        <Button variant="outline" class="mt-6 w-full">Buy Starter</Button>
      </div>

      <!-- Growth -->
      <div class="relative rounded-2xl bg-white p-8 shadow-lg ring-1 ring-primary-500 scale-105 z-10">
        <div class="absolute -top-4 left-0 right-0 mx-auto w-fit rounded-full bg-primary-600 px-3 py-1 text-xs font-semibold text-white">
          Most Popular
        </div>
        <h3 class="text-lg font-semibold leading-8 text-gray-900">Growth Pack</h3>
        <p class="mt-4 text-sm leading-6 text-gray-600">Perfect for active prospecting.</p>
        <div class="mt-6 flex items-baseline gap-x-1">
          <span class="text-4xl font-bold tracking-tight text-gray-900">$60</span>
        </div>
        <div class="mt-2 text-sm text-gray-500">500 Credits ($0.12 / lead)</div>
        <Button variant="primary" class="mt-6 w-full">Buy Growth</Button>
      </div>

      <!-- Agency -->
      <div class="rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-900/5 hover:ring-primary-500 hover:shadow-lg transition-all">
        <h3 class="text-lg font-semibold leading-8 text-gray-900">Agency Pack</h3>
        <p class="mt-4 text-sm leading-6 text-gray-600">Volume discount for teams.</p>
        <div class="mt-6 flex items-baseline gap-x-1">
          <span class="text-4xl font-bold tracking-tight text-gray-900">$100</span>
        </div>
        <div class="mt-2 text-sm text-gray-500">1,000 Credits ($0.10 / lead)</div>
        <Button variant="outline" class="mt-6 w-full">Buy Agency</Button>
      </div>
    </div>
  </div>
</section>
